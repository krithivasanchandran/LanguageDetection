package com.locdata.scraper.main;

import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

import com.locdata.utils.common.CommonUtils;

public class AmberCrombieFitch {
	
	public static void main(String args[]){
		
		
		String url = "https://www.abercrombie.com/shop/wd";
	    int counter = 0;
		for(;;){
			String pinto;
			Document doc = ScraperLogic.Scraper.fetchHtmlContents(counter == 0 ? url : pinto);
			Elements e = doc.select("a");
			for(Element r : e){
				String g = r.attr("href");
				if(g.startsWith("/shop")){
						
						Document document = ScraperLogic.Scraper.fetchHtmlContents(url.concat(g.replace("/shop/wd/", "/")));
						CommonUtils.checkDoc(document,AmberCrombieFitch.class);
						String text = doc.body().text();
						System.out.println(text);
				}
				
			}
			
			counter++;
		}
		
		
			
		}
		

	}

}
