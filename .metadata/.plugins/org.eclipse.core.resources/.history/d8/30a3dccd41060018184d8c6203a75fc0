package com.locdata.scraper.main;

public class AmberCrombieFitch {
	
	public static void main(String args[]){
		String url = "https://www.abercrombie.com/shop/wd";
		
		Document doc = ScraperLogic.Scraper.fetchHtmlContents(url);
		CommonUtils.checkDoc(doc,AmberCrombieFitch.class);
		Elements e = doc.select("a");
		for(Element r : e){
			String g = r.attr("href");
			if(g.startsWith("/shop")){
			
					Document document = ScraperLogic.Scraper.fetchHtmlContents(url.concat(g));
					CommonUtils.checkDoc(document,AmberCrombieFitch.class);
					String text = doc.body().text();
					Regex regexPhoneNumber = new Regex(@"^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$");
					 
					if (regexPhoneNumber.IsMatch(userInput))
					{
					    string formattedPhoneNumber = regexPhoneNumber.Replace(userInput, "($1) $2-$3");
					}
			}
			
		}
		

	}

}
